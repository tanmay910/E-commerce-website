
<%- include('../include/head.ejs') %>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
	<link href="/css/style.css" rel="stylesheet">
	<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

</head>
<body>

	<%- include('../include/navigation.ejs') %>
	<div class="container infinity-container">
		<div class="row">
			<div class="col-md-1 infinity-left-space"></div>
			
			<!-- FORM BEGIN -->
			<div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 text-center infinity-form">
				<!-- Company Logo -->
				<div class="text-center mb-3 mt-5">
					<img src="css/assets/logo.png" width="150px">
				</div>
				<div class="text-center mb-4">
					<h4>Signup into account</h4>
				</div>
				<!-- Form -->
				<form class="px-3" action="/signup" method="post">
					<% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
						<div class="user-message user-message--error"><%=errorMessage %></div>
					<% } %>
					<!-- Input Box -->
					<div class="form-input">
						<span><i class="fa fa-envelope"></i></span>
						<!-- <input type="email" name="" placeholder="Email Address" tabindex="10"required> -->
						<input  
						class="<%= validationError.find(e => e.path === 'email') ? 'invalid' : ''%>"
						type="email"
						 name="email"
						  id="email" 
						  placeholder="Email"
						  value="<%= oldInput.email %>">
					</div>
					<input type="hidden" name="_csrf" value="<%= csrfToken %>">
					<div class="form-input">
						<span><i class="fa fa-lock"></i></span>
						<!-- <input type="password" name="" placeholder="Password" required> -->
						<input 
						class="<%= validationError.find(e => e.path === 'password') ? 'invalid' : ''%>"
						type="password" name="password"  placeholder="Password" id="password" value="<%= oldInput.password%>" >
					</div>
					<div class="form-input">
						<span><i class="fa fa-lock"></i></span>
						<!-- <input type="password" name="" placeholder="Password" required> -->
						<input
                class="<%= validationError.find(e => e.path === 'confirmPassword') ? 'invalid' : ''%>"
                 type="password" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword" value="<%= oldInput.confirmPassword %>">
					</div>
					
					<div class="row mb-3">
						<!-- Remember Box -->
			            <div class="col-auto d-flex align-items-center">
			                <!-- <div class="custom-control custom-checkbox">
			                    <input type="checkbox" class="custom-control-input" id="cb1">
			                   	<label class="custom-control-label" for="cb1">Remember me</label>
			                </div> -->
				        </div>
			   	    </div>
			   	    <!-- Login Button -->
		            <div class="mb-3"> 
						<button type="submit" class="btn btn-block">Signup</button>
					</div>
					<!-- <div class="text-right ">
		                <a href="/reset" class="forget-link">Forgot password?</a>
		            </div> -->
					<div class="text-center mb-2">
	                   	<div class="text-center mb-3" style="color: #777;">or login with</div>
		                   	
	                   	<!-- Facebook Button -->
	                   	<a href="" class="btn btn-social btn-facebook"><i class="fa fa-facebook"></i></a>

                    	<!-- Google Button -->
						<a href="" class="btn btn-social btn-google"><i class="fa fa-google"></i></a>

						<!-- Twitter Button -->
						<a href="" class="btn btn-social btn-twitter"><i class="fa fa-twitter"></i></a>
					</div>
					<div class="text-center mb-5" style="color: #777;">Don't have an account? 
						<a class="register-link" href="/login">Login here</a>
			       	</div>
				</form>
			</div>
			<!-- FORM END -->
	
			<div class="col-md-1 infinity-right-space"></div>
		</div>
	</div>

	<%- include('../include/end.ejs') %>
